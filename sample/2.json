[
  {
    "name": "Ограничение заимствований / предоставления поручительств и ГО",
    "code": "cov1",
    "conditionType": "FINANCIAL_COVENANT",
    "required": "REQUIRED", // REQUIRED, NOT_REQUIRED, PARTYALLLY_REQUIRED
    "lifeCycle": {},
    "validationRules": [],

    "templates": [
      {
        "target": "DECISIONS",
        "template": "${COMPONENT_1} ${COMPONENT_2}, ${COMPONENT_3} ${COMPONENT_4}"
      },
      {
        "target": "DOCUMENTATION",
        "template": "До полного исполнения обязательств по Договору перед Кредитором обеспечить непревышение общей суммы \
        привлеченных Заемщиком от третьих лиц заимствований денежных средств (включая получение кредитов, эмиссию собственных \
        векселей и иных форм привлечения денежных средств на возвратной основе, с учетом обязательств по уплате процентов и выплате \
        дохода по ценным бумагам), включая обязательства по сделкам РЕПО (как этот термин трактуется в соответствии со \
        статьей 51.3 Федерального закона от 22.04.2006 №39-ФЗ "О рынке ценных бумаг" или любым иным применимым правом), \
        над суммой, определяемой в соответствии со следующей таблицей (вставляется таблица вида <Период/отчетные даты>-<Размер ограничения>). ${COMPONENT_4}"
      }
    ],

    "components": [
      // Вид условия
      {
        "code": "COMPONENT_1",
        "name": "Вид условия",
        "defaultValue": [
          {
            "code": "OPTION_1",
            "name": "Ограничение заимствования Заемщика в форме кредитов без процентов, займов без процентов и прочих обязательств"
          },
          {
            "code": "OPTION_2",
            "name": "Ограничение заимствования Заемщика в форме кредитов с процентами, займов с процентами и прочих обязательств"
          }
        ],

        "childs": [
          {"link": "COMPONENT_2"},
          {"operator": "AND"},
          {"braket": true},
          {"link": "COMPONENT_2"},
          {"operator": "OR"},
          {"link": "COMPONENT_2"},
          {"braket": true}
        ]
      },

      // Доп. условия
      {
        "code": "COMPONENT_2",
        "name": "Доп. условия",
        "defaultValue": [
          {
            "code": "OPTION_1",
            "name": "- нет необходимости -"
          },
          {
            "code": "OPTION_2",
            "name": "включая поручительства / гарантии, предоставленные третьим лицам"
          },
          {
            "code": "OPTION_3",
            "name": "включая поручительства / гарантии, предоставленные за Заемщика в пользу третьих лиц"
          },
          {
            "code": "OPTION_4",
            "name": "включая обязательства по сделкам РЕПО"
          }
        ]
      },

      // Сумма
      {
        "code": "COMPONENT_3",
        "name": "Сумма",
        "defaultValue": [
          {
            "code": "OPTION_1",
            "name": "",
            "template": "${v1}%",
            "value": {
              "v1": {
                "default": "45%",
                "type": "PERCENTAGE"
              }
            }
          },
          {
            "code": "OPTION_2",
            "name": "",
            "template": "${v1}",
            "value": {
              "v1": {
                "default": {
                  "amount": 0,
                  "currency": "RUR"
                },
                "type": "AMOUNT"
              }
            }
          },
          {
            "code": "OPTION_3",
            "name": "",
            "template": "${v1} ${v2}",
            "value": {
              "v1": {
                "default": "5%",
                "type": "PERCENTAGE"
              },
              "v2": {
                "default": "YEAR_INCOME",
                "type": "DICT",
                "dict": "FINANCIAL_INDEXES"
              }
            }
          },
          {
            "code": "OPTION_4",
            "name": "",
            "template": "${v1} ${v2}",
            "value": {
              "v1": {
                "default": "10%",
                "type": "PERCENTAGE"
              },
              "v2": {
                "default": "YEAR_INCOME",
                "type": "DICT",
                "dict": "FINANCIAL_INDEXES"
              },
              "v3": {
                "type": "PARTICIPANT"
              }
            }
          },
          {
            "code": "OPTION_5",
            "name": "",
            "table": [
              {
                "columnName": "Период",
                "type": "DATE"
              },
              {
                "columnName": "Размер",
                "type": "AMOUNT"
              }
            ]
          }
        ]
      },

      // Исключение
      {
        "code": "COMPONENT_4",
        "name": "Исключение",

        "checking": {
          "services": [
            {
              "name": "AnyRestructionServiceLink...",
              "parameters": [
                // ...
              ]
            }
          ]
        },

        "defaultValue": [
          {
            "code": "OPTION_1",
            "name": "- нет ограничений -"
          },
          {
            "code": "OPTION_2",
            "template": "привлечение кредитов от ${v1} на сумму не более ${v2}",
            "value": [
              {
                "v1": {
                  "type": "PARTICIPANT_3RD"
                },
                "v2": {
                  "default": {
                    "amount": 0,
                    "currency": "RUR"
                  },
                  "type": "AMOUNT"
                }
              }
            ]
          },
          {
            "code": "OPTION_3",
            "template": "привлечение займов от ${v1} на сумму не более ${v2}",
            "value": [
              {
                "v1": {
                  "type": "PARTICIPANT"
                },
                "v2": {
                  "default": {
                    "amount": 0,
                    "currency": "RUR"
                  },
                  "type": "AMOUNT"
                }
              }
            ]
          },
          {
            "code": "OPTION_4",
            "template": "выдача векселей номиналом до ${v1}",
            "value": [
              {
                "v1": {
                  "default": {
                    "amount": 0,
                    "currency": "RUR"
                  },
                  "type": "AMOUNT"
                }
              }
            ]
          },
          {
            "code": "OPTION_5",
            "name": "привлечение субординированных займов"
          }
        ]
      }
    ]
  }
]